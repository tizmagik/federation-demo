{
  "name": "federation-demo",
  "main": "gateway.js",
  "scripts": {
    "start-gateway": "nodemon --delay 4s gateway.js",
    "start-graphiti-publishing": "nodemon --delay 400ms services/graphiti-publishing/index.js",
    "start-graphiti-general": "nodemon --delay 400ms services/graphiti-general/index.js",
    "start-services": "concurrently \"npm:start-graphiti-*\"",
    "all": "concurrently \"npm:start-g*\"",
    "postinstall": "lerna bootstrap"
  },
  "devDependencies": {
    "lerna": "latest",
    "nodemon": "latest",
    "concurrently": "latest"
  },
  "dependencies": {
    "@apollo/gateway": "latest",
    "apollo-server": "latest",
    "graphql": "latest"
  }
}
